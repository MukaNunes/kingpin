{
    "manifest_version": 3,
    "name": "KingPin",
    "version": "0.1.0",
    "description": "Automatically pin tabs",
    "author": "Muka Nunes",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "KingPin - Pinned tabs manager"
    },
    "host_permissions": [
        "https://developer.chrome.com/*"
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ]
}
